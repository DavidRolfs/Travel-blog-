@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('.register').click(function () {
            $.ajax({
                type: 'GET',
                dataType: 'html',
                url: '@Url.Action("Register", "Account")',
                success: function (result) {
                    $('#register-form').html(result);
                }
            });
        });
    });
</script>
@using System.Security.Claims

<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    <p>@Html.ActionLink("Manage User Roles", "ManageUserRoles", "Role")</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register", new { @class = "register" })</p>


    <h2 class="register">REGISTER</h2>
    <div id="register-form"></div>

    <p>@Html.ActionLink("Log in", "Login")</p>
}